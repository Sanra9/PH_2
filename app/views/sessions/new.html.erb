<div class="container">
 <div class="row">
  <div class="col-sm-6 offset-ms-3">
   <h1>Ingresar</h1>
   <% if @errors %>
        <div class="alert alert-danger" role="alert">
            <ul>
            <% @errors.each do |error| %>
                <li> <%= error %> </li>
            <% end %>
            </ul>
        </div>
        <% end %>
   <%= form_tag controller: :sessions, action: :create do %>
    <div class="form-group">
     <%= label_tag(:email, 'Email') %>
     <%= email_field_tag(:email, nil, class: 'form-control input-lg') %>
    </div>
    <div class="form-group">
     <%= label_tag(:password, "Password") %>
     <%= password_field_tag(:password, nil, class:'form-control input-lg') %>
    </div>
    <div class="text-end"><%= submit_tag("Ingresar", class: 'btn btn-primary btn-lg btn-block') %>
   <% end %>
  </div>
 </div>
</div>  

