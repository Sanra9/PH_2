<!DOCTYPE html>
<html>
  <head>
    <title>Producthunt</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  </head>

  <body>
  <div class="container text-center">
   <div class="row">
    <div class="col offset-7 d-flex bg-dark justify-content-around">
    <% if signed_in? %>
      <div>
        Hola <%= current_user.name %> 
        <%= button_to 'Salir', logout_path, method: :delete, class:"btn btn-outline-danger" %>
      </div>
    <% else %>
      <%= button_to 'Registrarse', new_user_path, method: :get, class:"btn btn-primary" %>
      <%= button_to 'Iniciar SesiÃ³n', login_path, method: :get, class:"btn btn-outline-primary" %>
    
    <% end %>
    <% if flash[:notice] %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          <%= flash[:notice] %> 
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
          </button>
        </div>
    <% end %>
    </div>
   </div>
  </div>

    <%= yield %>
    
  </body>
</html>
